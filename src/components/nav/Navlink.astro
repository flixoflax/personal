---
interface Props {
  href: string;
  isActive?: boolean;
}

const { href, isActive } = Astro.props;
const className = isActive
  ? "text-center select-none after:transition-all text-white relative after:absolute after:h-[2px] after:mx-auto after:inset-x-0 after:-bottom-2 hover:after:w-full after:w-full after:bg-white"
  : "text-center select-none after:transition-all text-white relative after:absolute after:h-[2px] after:mx-auto after:inset-x-0 after:-bottom-2 hover:after:w-full after:w-0 after:bg-white/70";
---

<a class={className} href={href}><slot /></a>
