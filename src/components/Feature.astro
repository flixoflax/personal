---
import SectionContainer from "../layout/SectionContainer.astro";

interface Props {
  invert?: boolean;
  name: string;
  imgUrl: string;
  subServices: string[];
}

const { invert = false, imgUrl, name, subServices } = Astro.props;
---

<SectionContainer className="py-5">
  <div
    class={`flex flex-col ${
      invert ? "md:flex-row-reverse" : "md:flex-row"
    } items-center`}
  >
    <div class={`flex flex-1 ${invert && "justify-end"}`}>
      <div class={+invert ? "md:ml-20" : "md:mr-20"}>
        <img
          src={imgUrl}
          alt={`${name} illustration`}
          class="w-4/5 mx-auto mb-10 md:w-full md:h-full"
        />
      </div>
    </div>
    <div class="flex-1">
      <h1 class="font-display text-4xl mb-4">{name}</h1>
      <div class="text-lg text-gray-600">
        <slot />
        <br />
        <div class="flex flex-col items-start space-y-2 mt-10">
          {
            subServices.map((service) => (
              <strong class="text-black">â€” {service}</strong>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</SectionContainer>
