---
import MainLayout from "../../layout/MainLayout.astro";
import CaseStudies from "../../sections/CaseStudies.astro";
import CTA from "../../sections/CTA.astro";
import PageHeader from "../../sections/PageHeader.astro";

const nav = [
  {
    title: "Home",
    href: "/",
  },
  {
    title: "Services",
    href: "/services",
  },
  {
    title: "Case Studies",
    href: "/case-studies",
    isActive: true,
  },
  {
    title: "Contact",
    href: "#contact",
  },
];
---

<MainLayout title="Case Studies | Institut 4000" navigation={nav}>
  <link
    rel="canonical"
    href="https://www.institut4000.gmbh/services"
    slot="header"
  />
  <PageHeader headline="I strive for excellence when delivering a solution.">
    I am very passionate about delivering the best possible solutions for my
    customers to ensure a perfect handover. I'm always looking for new ways to
    serve my clients with content that is fresh, innovative, and engaging.
  </PageHeader>
  <CaseStudies />
  <CTA />
</MainLayout>
