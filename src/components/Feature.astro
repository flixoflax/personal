---
import SectionContainer from "../layout/SectionContainer.astro";

interface Props {
  invert?: boolean;
  imgUrl: string;
  name: string;
}

const { invert = false, imgUrl, name } = Astro.props;
---

<SectionContainer className={`${invert && "bg-gray-100"} py-10`}>
  <div
    class={`flex flex-col ${
      invert ? "md:flex-row-reverse" : "md:flex-row"
    } items-center`}
  >
    <div class={`flex flex-1 ${invert && "justify-end"}`}>
      <div class="max-w-56 md:w-96 md:h-96 mb-5">
        <img src={imgUrl} alt={`${name} illustration`} class="w-full h-full" />
      </div>
    </div>
    <div class="flex-1">
      <h1 class="font-display text-4xl mb-4">{name}</h1>
      <div class="text-lg text-gray-600">
        <slot />
      </div>
    </div>
  </div>
</SectionContainer>
