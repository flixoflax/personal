---
import SectionContainer from "../layout/SectionContainer.astro";
import type { CaseStudy } from "../types";

type Props = CaseStudy & {
  textColor?: string;
  backgroundColor?: string;
};

const {
  client,
  header,
  services,
  description,
  backgroundColor = "#000",
  textColor = "#fff",
} = Astro.props;
---

<SectionContainer
  className={"py-16 md:py-20 lg:py-28"}
  backgroundColor={backgroundColor}
>
  <div class="grid lg:grid-cols-12 gap-y-5 md:gap-y-10">
    <div class="lg:col-span-10 space-y-3 lg:space-y-8">
      <span
        set:text={client}
        data-sal="slide-up"
        data-sal-duration="1400"
        style={`color: ${textColor}`}
        class="font-display text-xl md:text-2xl lg:text-3xl"
      />
      <h1
        class="font-display text-4xl md:text-5xl lg:text-6xl"
        style={`color: ${textColor}`}
        set:html={header.headline}
        data-sal="slide-up"
        data-sal-duration="1000"
      />
    </div>
    <div
      class="text-white/70 md:text-lg lg:row-start-2 lg:col-span-12"
      set:html={header.content}
    />
  </div>
</SectionContainer>

<SectionContainer className={"pt-16 md:pt-20 lg:pt-28"}>
  <div class="grid lg:grid-cols-12 gap-y-5 md:gap-y-10 gap-x-20">
    <div class="lg:col-span-8 space-y-8">
      <h2
        set:html={description.short}
        class="font-display text-2xl md:text-3xl lg:text-4xl"
      />
      <p
        class="font-sans lg:text-lg text-black/70"
        set:html={description.long}
      />
    </div>
    <div class="lg:text-lg lg:col-span-4">
      <h2 class="font-display mb-2">Services I provided:</h2>
      <div class="space-y-2 text-black/70">
        {services.map((service) => <p class="">â€” {service}</p>)}
      </div>
    </div>
  </div>
</SectionContainer>
