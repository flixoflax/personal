---
import SectionContainer from "../layout/SectionContainer.astro";

interface Props {
  title?: string;
  href?: string;
}

const { title = "Get in touch", href = "/contact" } = Astro.props;
---

<SectionContainer
  className={"bg-black py-20 lg:py-36 relative overflow-hidden"}
>
  <div
    class="flex flex-col items-start md:items-center justify-center space-y-10 z-30"
  >
    <h1
      class="font-display text-4xl md:text-6xl lg:text-8xl text-white md:text-center w-full"
    >
      <slot>Let's create something amazing together.</slot>
    </h1>
  </div>

  <div class="mt-12 md:mt-16 flex flex-col sm:items-center">
    <a
      href={href}
      class="rounded-md text-center transition bg-white text-black hover:bg-opacity-90 py-2.5 px-6 select-none"
      >{title}</a
    >
  </div>
</SectionContainer>
<div class="w-full border-b border-b-black/70"></div>
