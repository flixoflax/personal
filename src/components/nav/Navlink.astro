---
interface Props {
  href: string;
  isActive?: boolean;
  textColor?: string;
}

const { href, isActive, textColor = "white" } = Astro.props;
const className = isActive
  ? "text-center select-none after:transition-all relative after:absolute after:h-[2px] after:mx-auto after:inset-x-0 after:-bottom-2 hover:after:w-full after:w-full after:bg-current"
  : "text-center select-none after:transition-all relative after:absolute after:h-[2px] after:mx-auto after:inset-x-0 after:-bottom-2 hover:after:w-full after:w-0 after:bg-current";
---

<a class={`mobile-link ${className}`} href={href} style={`color: ${textColor}`}
  ><slot />
</a>
