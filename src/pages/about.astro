---
import MainLayout from "../layout/MainLayout.astro";
import CTA from "../sections/CTA.astro";
import About from "../sections/About.astro";
import PageHeader from "../sections/PageHeader.astro";

const nav = [
  {
    title: "About",
    href: "/about",
    isActive: true,
  },
  {
    title: "Services",
    href: "/services",
  },
  {
    title: "Case Studies",
    href: "/case-studies",
  },
  {
    title: "Contact",
    href: "/contact",
  },
];
---

<MainLayout title="About | Institut 4000" navigation={nav}>
  <PageHeader headline="About">
    Dear small business owners, creators, creatives and people who love to bring
    ideas to life: your wishes have been granted. I'm <span class="text-white"
      >Niels</span
    >, a development enthusiast with a passion for design, exploring new
    entrepreneurial opportunities in technology.
  </PageHeader>
  <CTA title={"Explore Services"} href={"/services"}
    >Wondering what I can bring to the table?</CTA
  >
</MainLayout>
