---
import Link from "../components/Link.astro";
import MainLayout from "../layout/MainLayout.astro";
import SectionContainer from "../layout/SectionContainer.astro";
import CTA from "../sections/CTA.astro";
import PageHeader from "../sections/PageHeader.astro";

const nav = [
  {
    title: "About",
    href: "/about",
  },
  {
    title: "Services",
    href: "/services",
  },
  {
    title: "Case Studies",
    href: "/case-studies",
  },
  {
    title: "Contact",
    href: "/contact",
    isActive: true,
  },
];
---

<MainLayout title="Contact | Institut 4000" navigation={nav}>
  <PageHeader headline="Have a project in mind? <br> I'd love to get in touch.">
    I love the idea of turning creative ideas into reality. If you have a
    project in mind that might be a good fit, feel free to get in touch using
    the contact form below. Alternatively,
    <br />
    you can also say hi via <Link href="mailto:contact@institut4000.gmbh"
      >contact@institut4000.gmbh</Link
    >.
  </PageHeader>

  <SectionContainer className={"py-20 md:py-32 lg:py-56"}>
    Here goes a contact form.
  </SectionContainer>

  <CTA title={"Explore some Case Studies"} href={"/case-studies"}
    >Keep an eye on your inbox. We'll be in touch soon.</CTA
  >
</MainLayout>
