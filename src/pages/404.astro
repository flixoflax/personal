---
import MainLayout from "../layout/MainLayout.astro";
import CTA from "../sections/CTA.astro";

const nav = [
  {
    title: "Home",
    href: "/",
  },
  {
    title: "Services",
    href: "/services",
  },
  {
    title: "Case Studies",
    href: "/case-studies",
  },
  {
    title: "Contact",
    href: "/#contact",
  },
];

Astro.response.status = 404;
Astro.response.statusText = "Not found";
---

<MainLayout title="Not found | Institut 4000" navigation={nav}>
  <CTA title={"Beam me up, Scotty!"} href={"/"}>
    A little lost? Let's try again right from the start.
  </CTA>
</MainLayout>
